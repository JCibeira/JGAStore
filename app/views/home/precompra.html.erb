 
<center><h2>PRODUCTOS EN EL CARRO DE: <strong><%=current_user.username%></strong></h2></center>
<br>
<br>
<div class="row" style="margin-bottom:10%;">
 	<% if @data.size != 0 %>
    	<% @data.each do |product| %>
    		<a href="/producto/<%= product['id'] %>">
		        <div class="col-xs-8 col-sm-6 col-lg-4 col-md-6">
		        	<div class="thumbnail product">
		            	<div style='height:150px'>
		            		<% if product['foto'] != nil %>
		                		<img src='<%= product['foto'] %>' style='height:100%'alt="">
			                <% else %>
			                	<img src="http://placehold.it/320x150" style='height:100%' alt="">
			                <% end %>
		                </div>
		                <div class="caption">
		                    <h4 class="pull-right"><%=product['precio']%> Bs.</h4>
		                    <h4><%= product['nombre'] %>
		                    </h4>
		                    <p><%=product['descripcion']%></p>
		                </div>
		            </div>
		        </div>
		    </a>
	    <% end %>
	    <div class="col-sm-12 col-lg-12 col-md-12" style="margin-top:5%;">
	    	<center><button class="btn btn-success"><strong>CONFIRMAR COMPRA</strong></button></center>
	    </div>
	<% else %>
		<center><h2>Actualmente no posee ning√∫n producto en su carrito</h2></center>
		<div class="col-sm-12 col-lg-12 col-md-12" style="margin-bottom:10%; min-height: 50%;">
	    </div>
	<% end %>
</div>
    